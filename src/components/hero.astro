---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.jpg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter py-4">
      Elevate Your website with us
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl py-4">
      Create your website high-speed and SEO-friendly with Website4You. Best
      solutions for Business, startups, marketing, and landing pages. Harness
      cutting-edge technologies like Astro and TailwindCSS for a powerful,
      user-friendly online experience. Let's boost your online journey together!
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/#contact"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        Conatct us
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/website4u"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
         GitHub template list
      </Link>
    </div>
  </div>
</main>
